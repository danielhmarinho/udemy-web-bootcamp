<% include ../partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to YelpCamp!</h1>
      <p>View our hand-picked campground from all over the world</p>
      <p>
        <a class="btn btn-lg btn-primary" href="/campgrounds/new">Add new Campground</a>
      </p>
    </div>
  </header>
  <div class="row text-center" style="display:flex; flex-wrap: wrap;">
    <% campgrounds.forEach(function(campground) { %>
      <div class="col-md-3 col-sm-6">
        <figure class="figure">
          <img class="img-thumbnail" src="<%= campground.image %>">
          <figcaption class="figure-caption"><%= campground.name %></figcaption>
        </figure>
        <p>
          <a href="/campgrounds/<%= campground._id %>" class=" btn btn-primary">More Info</a>
        </p>
      </div>
    <% }); %>
  </div>
</div>

<% include ../partials/footer %>
